{
    "name": "antlr-editor",
    "version": "0.0.0",
    "description": "",
    "repository": {
        "type": "git",
        "url": "git://github.com/NicoLaval/antlr-editor.git"
    },
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "tsc",
        "lint:check": "eslint . --ext .ts,.tsx",
        "lint": "npm run lint:check -- --fix",
        "_format": "prettier '**/*.{ts,tsx,json,md}'",
        "format": "npm run _format -- --write",
        "format:check": "npm run _format -- --list-different",
        "storybook": "start-storybook -p 6006",
        "build-storybook": "build-storybook"
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "eslint --fix"
        ],
        "*.{ts,tsx,json,md}": [
            "prettier --write"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged -v"
        }
    },
    "author": "u/NicoLaval",
    "license": "MIT",
    "files": [
        "src/",
        "!src/test/",
        "dist/",
        "!dist/test/",
        "!dist/tsconfig.tsbuildinfo"
    ],
    "keywords": [
        "antlr",
        "monaco"
    ],
    "homepage": "https://github.com/NicoLaval/antlr-editor",
    "devDependencies": {
        "@types/debug": "^4.1.5",
        "@types/node": "^10.0.0",
        "@types/react": "^17.0.5",
        "@typescript-eslint/eslint-plugin": "^4.15.1",
        "@typescript-eslint/parser": "^4.15.1",
        "eslint": "^7.20.0",
        "eslint-config-prettier": "^7.2.0",
        "evt": "^1.8.11",
        "husky": "^4.3.0",
        "lint-staged": "^10.5.4",
        "prettier": "^2.2.1",
        "simplifyify": "^8.0.3",
        "terser": "^5.3.8",
        "typescript": "^4.1.5"
    },
    "dependencies": {
        "antlr4ts": "^0.5.0-alpha.4",
        "json-antlr-tools-ts": "^0.1.3",
        "monaco-editor": "^0.23.0",
        "monaco-editor-webpack-plugin": "^3.0.1",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-monaco-editor": "^0.43.0",
        "vtl-2-0-antlr-tools-ts": "^0.1.5"
    }
}
